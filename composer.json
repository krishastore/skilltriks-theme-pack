{
    "name": "krishaweb/stlms-addon",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "krishaweb",
            "email": "info@krishaweb.com",
            "homepage": "https://www.skilltriks.com/"
        }
    ],
    "type": "wordpress-plugin",
    "support": {
        "issues": "https://github.com/krishastore/stlms-addon/issues",
        "source": "https://github.com/krishastore/stlms-addon"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0.0",
        "phpcompatibility/phpcompatibility-wp": "*",
        "phpstan/phpstan": "^1.11",
        "szepeviktor/phpstan-wordpress": "^1.3"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "format": "phpcbf --standard=phpcs.xml --report-summary --report-source",
        "lint": "phpcs --standard=phpcs.xml --report-full --report-checkstyle=./phpcs-report.xml",
        "phpstan": "./vendor/bin/phpstan analyse --memory-limit=2G --configuration=phpstan.neon"
    }
}